---
import { Icon } from "astro-icon/components";
import BasicLayout from "./BasicLayout.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<BasicLayout {title}>
    <slot name="head" slot="head" />
    <main>
        <slot />
    </main>
</BasicLayout>

<style lang="scss">
    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        width: 100%;
        color: var(--logo-text-color);
        font-size: 1.5em;
        gap: 1em;

        @media only screen and (min-width: $breakpoint-s) {
            max-width: Max(800px, 50%);
            margin-inline: auto;
        }

        :global(:is(h1, h2, h3, h4, h5, h6)) {
            text-align: left;
            width: 100%;
        }

        :global(*) {
            max-width: 100%;
            height: auto;
        }

        :global(img) {
            max-height: 80vh;
            max-height: 80svh;
            object-fit: contain;
        }

        :global(a) {
            color: black;
            text-decoration: none;

            &:hover {
                color: var(--logo-color);
                text-decoration: underline;
            }
        }

        :global(p:has(img:nth-child(2))) {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2em;
            max-width: 100%;

            :global(img) {
                width: auto;
            }
        }
    }
</style>
